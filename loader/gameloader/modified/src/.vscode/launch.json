{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "amiga-assembly",
            "request": "launch",
            "name": "FS-UAE Debug",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/uae/dh0/gameloader",
            "remoteProgram": "SYS:gameloader",
            "emulatorType": "fs-uae",
            "emulatorArgs": [
                "--floppy-image-0=${workspaceFolder}/disk.ipf",
                "--floppy-drive-0=${workspaceFolder}/disk.ipf",
                "--hard_drive_0=${workspaceFolder}/uae/dh0",
                "--automatic_input_grab=0"
            ],
            "preLaunchTask": "amigaassembly: build"
        },
        {
            "type": "amiga-assembly",
            "request": "launch",
            "name": "WinUAE Debug",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/uae/dh0/gameloader",
            "remoteProgram": "SYS:gameloader",
            "emulatorType": "winuae",
            "emulatorArgs": [
                "-s",
                "filesystem=rw,dh0:${workspaceFolder}/uae/dh0"
            ],
            "preLaunchTask": "amigaassembly: build"
        },
        {
            "type": "amiga-assembly",
            "request": "launch",
            "name": "FS-UAE Launch",
            "noDebug": true,
            "program": "${workspaceFolder}/uae/dh0/gameloader",
            "remoteProgram": "SYS:gameloader",
            "emulatorType": "fs-uae",
            "emulatorArgs": [
                "--floppy_image_0=${workspaceFolder}/disk.ipf",
                "--floppy_drive_0=${workspaceFolder}disk.ipf",
                "--hard_drive_0=${workspaceFolder}/uae/dh0",
                "--automatic_input_grab=0"
                
            ],
            "preLaunchTask": "amigaassembly: build"
        },
        {
            "type": "amiga-assembly",
            "request": "launch",
            "name": "WinUAE Launch",
            "noDebug": true,
            "program": "${workspaceFolder}/uae/dh0/gameloader",
            "remoteProgram": "SYS:gameloader",
            "emulatorType": "winuae",
            "emulatorArgs": [
                "-s",
                "filesystem=rw,dh0:${workspaceFolder}/uae/dh0"
            ],
            "preLaunchTask": "amigaassembly: build"
        }
    ]
}
